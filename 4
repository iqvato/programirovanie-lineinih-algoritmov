#include <iostream>
using namespace std;

int main() {
    // Задаем размерность матрицы
    const int rows = 3;
    const int cols = 4;
    
    // Создаем матрицу и заполняем её значениями
    int matrix[rows][cols] = {
        {0, -7, -3, -5},
        {-3, 1, 7, 2},
        {9, 10, 5, -4}
    };
    
    // Выводим исходную матрицу
    cout << "Исходная матрица:\n";
    for(int i = 0; i < rows; i++) {
        for(int j = 0; j < cols; j++) {
            cout << matrix[i][j] << " ";
        }
        cout << endl;
    }
    
    // Создаем массивы для хранения результатов
    int sum[cols] = {0};     // суммы элементов
    int count[cols] = {0};   // количество положительных элементов
    
    // Проходим по всем элементам матрицы
    for(int j = 0; j < cols; j++) {
        for(int i = 0; i < rows; i++) {
            sum[j] += matrix[i][j];    // считаем сумму всех элементов столбца
            if(matrix[i][j] > 0) {     // проверяем на положительность
                count[j]++;            // увеличиваем счетчик положительных
            }
        }
    }
    
    // Выводим результаты
    cout << "\nСумма элементов по столбцам: ";
    for(int i = 0; i < cols; i++) {
        cout << sum[i] << " ";
    }
    
    cout << "\nКоличество положительных элементов: ";
    for(int i = 0; i < cols; i++) {
        cout << count[i] << " ";
    }
    
    return 0;
}
